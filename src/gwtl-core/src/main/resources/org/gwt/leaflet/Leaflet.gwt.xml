<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.4.0//EN" "http://google-web-toolkit.googlecode.com/svn/tags/2.4.0/distro-source/core/src/gwt-module.dtd">
<module rename-to="gwtl_core">

	<!-- GWT dependencies -->
	<inherits name="com.google.gwt.user.User" />
	<inherits name="com.google.gwt.json.JSON" />
	
	<!-- GWT Leaflet dependencies -->
	<inherits name="org.gwt.leaflet.require.Require" />
	
	<!-- Ensure Leaflet script and styles are pre-loaded -->
	<script     src="libs/leaflet/origin/master/14a8be5050f24b1d11d8f2e38259880e11c31fdf/leaflet.js" />
	<stylesheet src="libs/leaflet/origin/master/14a8be5050f24b1d11d8f2e38259880e11c31fdf/leaflet.css" />
	<stylesheet src="libs/leaflet/origin/master/14a8be5050f24b1d11d8f2e38259880e11c31fdf/leaflet.ie.css" />

	<!-- GWT Leaflet source paths -->
	<source path="client"></source>
	
	<!-- Leaflet API implementation (dependency injection) -->
	<replace-with class="org.gwt.leaflet.client.impl.LeafletImpl">
		<when-type-is  class="org.gwt.leaflet.client.Leaflet" />
	</replace-with>
	<replace-with class="org.gwt.leaflet.client.map.impl.MapFactoryImpl">
		<when-type-is  class="org.gwt.leaflet.client.map.MapFactory" />
	</replace-with>
	<replace-with class="org.gwt.leaflet.client.crs.impl.CRSFactoryImpl">
		<when-type-is  class="org.gwt.leaflet.client.crs.CRSFactory" />
	</replace-with>
	<replace-with class="org.gwt.leaflet.client.type.impl.TypeFactoryImpl">
		<when-type-is  class="org.gwt.leaflet.client.type.TypeFactory" />
	</replace-with>
	<replace-with class="org.gwt.leaflet.client.layer.impl.LayerFactoryImpl">
		<when-type-is  class="org.gwt.leaflet.client.layer.LayerFactory" />
	</replace-with>
	<replace-with class="org.gwt.leaflet.client.control.impl.ControlFactoryImpl">
		<when-type-is  class="org.gwt.leaflet.client.control.ControlFactory" />
	</replace-with>

</module>
