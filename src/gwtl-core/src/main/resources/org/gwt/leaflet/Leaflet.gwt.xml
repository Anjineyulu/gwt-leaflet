<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.4.0//EN" "http://google-web-toolkit.googlecode.com/svn/tags/2.4.0/distro-source/core/src/gwt-module.dtd">
<module rename-to="gwtl_core">

	<!-- GWT dependencies -->
	<inherits name="com.google.gwt.user.User" />
	<inherits name="com.google.gwt.json.JSON" />
	
	<!-- Ensure Leaflet script and styles are pre-loaded -->
	<script     src="libs/leaflet/origin/master/14a8be5050f24b1d11d8f2e38259880e11c31fdf/leaflet-src.js" />
	<stylesheet src="libs/leaflet/origin/master/14a8be5050f24b1d11d8f2e38259880e11c31fdf/leaflet.css" />
	<stylesheet src="libs/leaflet/origin/master/14a8be5050f24b1d11d8f2e38259880e11c31fdf/leaflet.ie.css" />

	<!-- GWT Leaflet source paths -->
	<source path="api"></source>
	<source path="impl"></source>
	
	<!-- Leaflet API implementation (dependency injection) -->
	<replace-with     class="org.gwt.leaflet.impl.LeafletImpl">
		<when-type-is  class="org.gwt.leaflet.api.Leaflet" />
	</replace-with>
	<replace-with     class="org.gwt.leaflet.impl.map.MapFactoryImpl">
		<when-type-is  class="org.gwt.leaflet.api.map.MapFactory" />
	</replace-with>
	<replace-with     class="org.gwt.leaflet.impl.crs.CRSFactoryImpl">
		<when-type-is  class="org.gwt.leaflet.api.crs.CRSFactory" />
	</replace-with>
	<replace-with     class="org.gwt.leaflet.impl.types.TypeFactoryImpl">
		<when-type-is  class="org.gwt.leaflet.api.types.TypeFactory" />
	</replace-with>
	<replace-with     class="org.gwt.leaflet.impl.layers.LayerFactoryImpl">
		<when-type-is  class="org.gwt.leaflet.api.layers.LayerFactory" />
	</replace-with>
	<replace-with     class="org.gwt.leaflet.impl.controls.ControlFactoryImpl">
		<when-type-is  class="org.gwt.leaflet.api.controls.ControlFactory" />
	</replace-with>

</module>
